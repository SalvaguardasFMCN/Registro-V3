<head>
  <base target="_top">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
  <style>
    body { padding: 20px; padding-bottom: 50px; }
    #qr-reader { width: 100%; max-width: 500px; margin-top: 20px; }
    .nav-tabs .nav-link { cursor: pointer; }
    #loading { display: none; }
    select.form-control:invalid { color: #6c757d; }
    
    /* Estilos para la lista flotante */
    #search-results-list {
      position: absolute;
      top: 100%; left: 0; right: 0; z-index: 1000;
      background: white; border: 1px solid #ddd; border-top: none;
      max-height: 300px; overflow-y: auto; box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      display: none;
    }
    .search-item { padding: 10px; cursor: pointer; border-bottom: 1px solid #eee; }
    .search-item:hover { background-color: #f8f9fa; }
    
    /* Estilo especial para cuando no hay resultados en búsqueda */
    .no-result-item { padding: 15px; text-align: center; cursor: default; }
    .no-result-item:hover { background-color: white; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-center mb-4">Registro de Asistencia</h2>
    
    <div class="event-section p-3 border rounded mb-4 bg-light">
      <h5 class="mb-3">1. Datos del Evento</h5>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label>ID-Actividad</label>
          <select class="form-control" id="event-id" required><option disabled selected>Cargando...</option></select>
        </div>
        <div class="form-group col-md-8">
          <label>Nombre de la actividad</label>
          <select class="form-control" id="event-name" required><option disabled selected>Cargando...</option></select>
        </div>
      </div>
    </div>

    <h5 class="mb-3">2. Datos del Asistente</h5>

    <div class="mb-4 position-relative">
      <label>Buscar persona (autocompletar):</label>
      <input type="text" class="form-control" id="user-search" placeholder="Escribe nombre o apellidos..." autocomplete="off">
      <div id="search-results-list"></div>
    </div>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item"> <a class="nav-link active" id="id-tab" data-toggle="tab" href="#id" role="tab">Por ID</a> </li>
      <li class="nav-item"> <a class="nav-link" id="phone-tab" data-toggle="tab" href="#phone" role="tab">Por Teléfono</a> </li>
      <li class="nav-item"> <a class="nav-link" id="name-tab" data-toggle="tab" href="#name" role="tab">Manual</a> </li>
      <li class="nav-item"> <a class="nav-link" id="qr-tab" data-toggle="tab" href="#qr" role="tab">Por QR</a> </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">
      
      <div class="tab-pane fade show active" id="id" role="tabpanel">
        <form id="form-id" class="mt-3">
          <div class="form-group"> <label>ID-Beneficiario</label> <input type="text" class="form-control" id="id-beneficiario" required> </div>
          <button type="submit" class="btn btn-primary btn-block">Registrar Asistencia</button>
        </form>
      </div>

      <div class="tab-pane fade" id="phone" role="tabpanel">
        <form id="form-phone" class="mt-3">
          <div class="form-group"> 
            <label>Número de Teléfono</label> 
            <input type="tel" class="form-control" id="telefono-input" placeholder="Ej: 5512345678" required> 
          </div>
          <button type="submit" class="btn btn-primary btn-block">Registrar por Teléfono</button>
        </form>
      </div>

      <div class="tab-pane fade" id="name" role="tabpanel">
        <form id="form-name" class="mt-3">
          <div class="form-group"> <label>Nombre Completo</label> <input type="text" class="form-control" id="nombre" required> </div>
          <div class="form-group"> <label>Primer Apellido</label> <input type="text" class="form-control" id="apellido1" required> </div>
          <div class="form-group"> <label>Segundo Apellido</label> <input type="text" class="form-control" id="apellido2"> </div>
          <button type="submit" class="btn btn-primary btn-block">Registrar Asistencia</button>
        </form>
      </div>

      <div class="tab-pane fade" id="qr" role="tabpanel">
        <p class="mt-3 text-center">Apunta la cámara al código QR.</p>
        <div id="qr-reader"></div>
        <button id="stop-qr-btn" class="btn btn-danger btn-block mt-2" style="display:none;">Detener Escáner</button>
      </div>
    </div>
    
    <div id="loading" class="mt-3 text-center">
      <div class="spinner-border text-primary" role="status"> <span class="sr-only">Cargando...</span> </div>
      <p>Procesando...</p>
    </div>
    <div id="results" class="alert mt-3" style="display:none;"></div>

  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    // --- URL WEB APP ---
    const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbwMIY4QN0VrUeMHM0HjpD041FLq-CqbfELmMSkt2w_EhTFe9O0WRau01VJiMeI26iWtRQ/exec"; 
    // -------------------------------------

    // URL DEL FORMULARIO DE REGISTRO
    const FORM_URL = "https://docs.google.com/forms/d/e/1FAIpQLSe6YYYIIgq-5XTdOUmEq1oM8V2NdgzPWuR9x5VIG0nYLupZ4g/viewform?usp=dialog";

    let html5QrCode = null;
    let searchTimeout = null;

    document.addEventListener('DOMContentLoaded', () => { loadCatalogActivities(); });

    // --- 1. LÓGICA DEL BUSCADOR  ---
    const searchInput = document.getElementById('user-search');
    const resultsList = document.getElementById('search-results-list');

    searchInput.addEventListener('input', (e) => {
      const query = e.target.value;
      clearTimeout(searchTimeout);
      if (query.length < 3) { resultsList.style.display = 'none'; return; }
      searchTimeout = setTimeout(() => { performUserSearch(query); }, 500);
    });

    async function performUserSearch(query) {
      resultsList.style.display = 'block';
      resultsList.innerHTML = '<div class="search-item text-muted">Buscando...</div>';
      try {
        const users = await callGoogleApi('searchUser', { query: query });
        renderSearchResults(users);
      } catch (error) { resultsList.innerHTML = '<div class="search-item text-danger">Error de conexión</div>'; }
    }

    function renderSearchResults(users) {
      resultsList.innerHTML = '';
      
      // SI NO HAY RESULTADOS -> MOSTRAR BOTÓN DE REGISTRO
      if (users.length === 0) { 
        resultsList.innerHTML = `
          <div class="no-result-item">
             <p class="mb-2 text-danger font-weight-bold">Usuario no encontrado</p>
             <p class="small text-muted mb-2">¿No aparece en la lista?</p>
             <a href="${FORM_URL}" target="_blank" class="btn btn-success btn-sm btn-block">
               Registrarse aquí
             </a>
          </div>`; 
        return; 
      }

      // Si hay resultados, mostrarlos
      users.forEach(user => {
        const item = document.createElement('div');
        item.className = 'search-item';
        item.innerHTML = `<strong>${user.nombreCompleto}</strong> <span class="badge badge-secondary float-right">${user.id}</span>`;
        item.addEventListener('click', () => selectUser(user));
        resultsList.appendChild(item);
      });
    }

    function selectUser(user) {
      document.getElementById('id-beneficiario').value = user.id;
      $('#id-tab').tab('show');
      searchInput.value = ''; resultsList.style.display = 'none';
    }
    
    // Cerrar buscador si clic fuera (pero permitir clic en el enlace)
    document.addEventListener('click', (e) => {
      if (!searchInput.contains(e.target) && !resultsList.contains(e.target)) resultsList.style.display = 'none';
    });


    // --- 2. GESTIÓN DE CATÁLOGO ---
    async function loadCatalogActivities() {
      try {
        const activities = await callGoogleApi('getCatalog', {});
        populateCatalogDropdowns(activities);
      } catch (error) { handleError(error); }
    }
    function populateCatalogDropdowns(activities) {
      const idSelect = document.getElementById('event-id');
      const nameSelect = document.getElementById('event-name');
      idSelect.innerHTML = ''; nameSelect.innerHTML = '';
      idSelect.add(new Option("Selecciona ID...", "", true, true));
      nameSelect.add(new Option("Selecciona Nombre...", "", true, true));
      idSelect.options[0].disabled = true; nameSelect.options[0].disabled = true;
      activities.forEach(activity => {
        idSelect.add(new Option(activity.id, activity.id));
        nameSelect.add(new Option(activity.nombre, activity.id));
      });
    }
    document.getElementById('event-id').addEventListener('change', (e) => document.getElementById('event-name').value = e.target.value);
    document.getElementById('event-name').addEventListener('change', (e) => document.getElementById('event-id').value = e.target.value);


    // --- 3. REGISTRO Y MANEJO DE ERRORES ---
    async function processRegistration(userIdentifier, method) {
      showLoading(true);
      const eventIdSelect = document.getElementById('event-id');
      const eventNameSelect = document.getElementById('event-name');
      if (!eventIdSelect.value) { handleError(new Error("Selecciona una actividad.")); return; }
      
      const eventName = eventNameSelect.options[eventNameSelect.selectedIndex].text;
      const eventIdentifier = { id: eventIdSelect.value, nombre: eventName };
      
      try {
        const successMessage = await callGoogleApi('validateUserAndEvent', { userIdentifier, eventIdentifier, method });
        showResult(successMessage);
        resetForms();
      } catch (error) { 
        handleError(error); // Aquí se captura el error de "Usuario no encontrado"
      } finally { 
        showLoading(false); 
      }
    }

    // --- FORMULARIOS ---
    document.getElementById('form-id').addEventListener('submit', (e) => {
      e.preventDefault();
      processRegistration({ id: document.getElementById('id-beneficiario').value }, 'ID-Beneficiario');
    });

    document.getElementById('form-phone').addEventListener('submit', (e) => {
      e.preventDefault();
      const tel = document.getElementById('telefono-input').value;
      processRegistration({ telefono: tel }, 'Teléfono');
    });

    document.getElementById('form-name').addEventListener('submit', (e) => {
      e.preventDefault();
      processRegistration({ 
        nombre: document.getElementById('nombre').value, 
        apellido1: document.getElementById('apellido1').value, 
        apellido2: document.getElementById('apellido2').value 
      }, 'Nombre Manual');
    });


    // --- QR ---
    document.getElementById('qr-tab').addEventListener('click', () => startQrScanner());
    document.querySelectorAll('#id-tab, #name-tab, #phone-tab').forEach(tab => tab.addEventListener('click', stopQrScanner));
    document.getElementById('stop-qr-btn').addEventListener('click', stopQrScanner);

    function startQrScanner() {
      if (html5QrCode && html5QrCode.isScanning) return;
      html5QrCode = new Html5Qrcode("qr-reader");
      document.getElementById('stop-qr-btn').style.display = 'block';
      html5QrCode.start({ facingMode: "environment" }, { fps: 10, qrbox: { width: 250, height: 250 } }, 
        (decodedText) => { stopQrScanner(); processRegistration({ qr: decodedText }, 'QR'); }
      ).catch(err => showResult("No se pudo iniciar cámara.", true));
    }
    function stopQrScanner() {
      if (html5QrCode && html5QrCode.isScanning) {
        html5QrCode.stop().then(() => { document.getElementById('stop-qr-btn').style.display = 'none'; });
      }
    }


    // --- 4. UTILS Y MANEJO VISUAL ---
    function showLoading(b) { document.getElementById('loading').style.display = b ? 'block' : 'none'; }
    
    function showResult(message, isError = false) { 
      const r = document.getElementById('results'); 
      // Usamos innerHTML para permitir enlaces/botones
      r.innerHTML = message; 
      r.className = isError ? 'alert alert-danger' : 'alert alert-success'; 
      r.style.display = 'block'; 
      // Si es error, dar más tiempo para leer y clickear (15 seg)
      setTimeout(() => r.style.display = 'none', isError ? 15000 : 5000); 
    }
    
    function resetForms() { 
      document.getElementById('form-id').reset(); 
      document.getElementById('form-name').reset();
      document.getElementById('form-phone').reset();
    }
    
    /**
     * Función especial para manejar errores y mostrar el botón si es necesario
     */
    function handleError(e) { 
      showLoading(false); 
      
      // Si el error dice "Usuario no encontrado" (viene del Backend)
      if (e.message && e.message.includes("Usuario no encontrado")) {
        const htmlMessage = `
          <strong>Usuario no encontrado.</strong><br>
          Por favor regístrate en el siguiente formulario:<br>
          <a href="${FORM_URL}" target="_blank" class="btn btn-success mt-2">Ir al Registro</a>
        `;
        showResult(htmlMessage, true);
      } else {
        // Otros errores (conexión, evento no válido, etc.)
        showResult(`Error: ${e.message}`, true); 
      }
    }

    async function callGoogleApi(action, data) {
      if (WEB_APP_URL.includes("PEGA_AQUÍ")) throw new Error("Configura la URL de tu Web App.");
      const response = await fetch(WEB_APP_URL, {
        method: 'POST', mode: 'cors', headers: { 'Content-Type': 'text/plain;charset=utf-8', },
        body: JSON.stringify({ action: action, data: data }),
      });
      const result = await response.json();
      if (result.status === 'error') throw new Error(result.message);
      return result.data;
    }
  </script>
</body>
</html>